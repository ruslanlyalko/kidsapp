<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginTop="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_radius">

        <LinearLayout
            android:id="@+id/panel_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_comment" />

            <LinearLayout
                android:id="@+id/text_panel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/card_mk_title_padding"
                android:paddingTop="@dimen/card_mk_title_padding">

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/panel_right"
                    android:paddingLeft="@dimen/card_mk_title_padding"
                    android:paddingRight="@dimen/card_mk_title_padding"
                    android:text="Text"
                    android:textColor="@color/album_title"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title1"
                    android:layout_toLeftOf="@+id/panel_right"
                    android:paddingLeft="@dimen/card_mk_title_padding"
                    android:paddingRight="@dimen/card_mk_title_padding"
                    android:text="text"
                    android:textSize="14sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="top"
                android:padding="8dp"
                android:text=" 16.05" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>