<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.kidsapp.ReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/divider_with_left_padding"
        android:dividerPadding="8dp"
        android:orientation="vertical"
        android:showDividers="middle">


        <com.example.android.kidsapp.utils.SwipeLayout
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/swipe_menu"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:divider="?android:dividerHorizontal"
                android:dividerPadding="2dp"
                android:orientation="vertical"
                android:paddingBottom="22dp"
                android:showDividers="middle">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5" />

                <EditText
                    android:id="@+id/input_room_60"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:inputType="number"
                    android:text="0"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/input_room_40"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:inputType="number"
                    android:text="0"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/input_room_20"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:inputType="number"
                    android:text="0"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_action_room" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Кімната"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Всього"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/text_room_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 ГРН"
                        android:textColor="@color/colorBlack"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/text_room_60"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="60 грн * 0 = 0 ГРН"
                        android:textColor="@color/colorBlack" />

                    <SeekBar
                        android:id="@+id/seek_room_60"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="25"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/text_room_40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="40 грн * 0 = 0 ГРН"
                        android:textColor="@color/colorBlack" />

                    <SeekBar
                        android:id="@+id/seek_room_40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="25"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/text_room_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="20 грн * 0 = 0 ГРН"
                        android:textColor="@color/colorBlack" />

                    <SeekBar
                        android:id="@+id/seek_room_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="25"
                        android:progress="0" />

                </LinearLayout>

            </LinearLayout>

        </com.example.android.kidsapp.utils.SwipeLayout>

        <com.example.android.kidsapp.utils.SwipeLayout
            android:id="@+id/swipe_layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/swipe_menu2"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:divider="?android:dividerHorizontal"
                android:dividerPadding="2dp"
                android:orientation="vertical"
                android:paddingBottom="22dp"
                android:showDividers="middle">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5" />

                <EditText
                    android:id="@+id/input_room_50"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:inputType="number"
                    android:text="0"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/input_room_25"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:inputType="number"
                    android:text="0"
                    android:textAlignment="center" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="66dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_action_birthday" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:text="Дні Народження"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:text="Всього"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/text_bday_total"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0 ГРН"
                        android:textColor="@color/colorBlack"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/text_bday_50"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:text="Кімната: 50 грн * 0 = 0 ГРН"
                        android:textColor="@color/colorBlack" />

                    <SeekBar
                        android:id="@+id/seek_bday_50"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="25"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/text_bday_25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:text="МК: 25 грн * 0 = 0 ГРН"
                        android:textColor="@color/colorBlack" />

                    <SeekBar
                        android:id="@+id/seek_bday_25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="25"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/text_bday_mk_done"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:text="Проведено Майстер Класів - 0"
                        android:textColor="@color/colorBlack" />

                    <SeekBar
                        android:id="@+id/seek_bday_mk_done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="3"
                        android:progress="0" />

                </LinearLayout>

            </LinearLayout>


        </com.example.android.kidsapp.utils.SwipeLayout>

        <com.example.android.kidsapp.utils.SwipeLayout
            android:id="@+id/swipe_layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/swipe_menu3"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:divider="?android:dividerHorizontal"
                android:dividerPadding="2dp"
                android:orientation="vertical"
                android:paddingBottom="22dp"
                android:showDividers="middle">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5" />

                <EditText
                    android:id="@+id/input_mk_1"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:inputType="number"
                    android:text="0"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/input_mk_2"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:inputType="number"
                    android:text="0"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_action_mk" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_mk_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Майстер клас"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <Button
                            android:visibility="gone"
                            android:id="@+id/button_choose_mk"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginTop="8dp"
                            android:background="?attr/selectableItemBackground"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="ВИБРАТИ"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Всього"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/text_mk_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 ГРН"
                        android:textColor="@color/colorBlack"
                        android:textSize="32sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_mk_t1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Тариф 1:  30 грн  x"
                                android:textColor="@color/colorBlack" />

                            <SeekBar
                                android:id="@+id/seek_mk_t1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="5"
                                android:progress="0" />

                            <TextView
                                android:id="@+id/text_mk_t2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Тариф 2:  30 грн  x"
                                android:textColor="@color/colorBlack" />

                            <SeekBar
                                android:id="@+id/seek_mk_t2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="5"
                                android:progress="0" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/text_mk_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="  0 = 0 ГРН"
                                android:textColor="@color/colorBlack" />

                            <SeekBar
                                android:id="@+id/seek_mk_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="15"
                                android:progress="0" />

                            <TextView
                                android:id="@+id/text_mk_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="  0 = 0 ГРН"
                                android:textColor="@color/colorBlack" />

                            <SeekBar
                                android:id="@+id/seek_mk_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="15"
                                android:progress="0" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.example.android.kidsapp.utils.SwipeLayout>

    </LinearLayout>

</ScrollView>
